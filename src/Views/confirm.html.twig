{% extends "template.html.twig" %}

	{% block body %}
		<div class="body-content">
			<h1>Par messure de sécurité est éviter les robots, vous devez confirmer votre compte manuellement !</h1>
			<form method="POST" action="{{baseUrl}}/confirm/confirmAccount">
				<div class="form-group">
					<input type="text" name="confirmation_token" placeholder="Votre token">
				</div>

				<div class="form-group">
					<input type="text" name="id" >
				</div>

				<button type="submit" class="form-group">Confirmer mon compte</button>
			</form>
		</div>
	{% endblock %}
